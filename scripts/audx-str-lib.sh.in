audx_str_lib_verbose=''

str_trim_space() {
	local str_in=${1}
	local str_out="${str_in}"

	str_out="${str_out//    / }"
	str_out="${str_out//   / }"
	str_out="${str_out//  / }"

	# trim leading space.
	str_out="${str_out#"${str_out%%[![:space:]]*}"}"

	# trim trailing space.
	str_out="${str_out%"${str_out##*[![:space:]]}"}"

	if [[ ${audx_str_lib_verbose} && "${str_in}" != "${str_out}" ]]; then
		echo "${FUNCNAME[0]}: '${str_in}' => '${str_out}'" >&2
	fi

	echo "${str_out}"
}

test_str_trim_space() {
	local input=(
		'[123 456]'
		'[123  456]'
		'[123   456]'
		'[123  456 ]'
		'[123  456  ]'
		'[ 123  456 ]'
		'[  123       456  ]'
	)

	audx_str_lib_verbose=1

	local i
	for i in "${input[@]}"; do
		str_trim_space "${i}" > /dev/null
	done
}

