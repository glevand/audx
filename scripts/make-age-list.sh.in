#!/usr/bin/env bash

usage() {
	local old_xtrace
	old_xtrace="$(shopt -po xtrace || :)"
	set +o xtrace

	{
		echo "${script_name} - Create an age list of collection."
		echo "Usage: ${script_name} [flags] top-dir"
		echo "Option flags:"
		echo "  -o --out-file - Playlist output file. Default: '${out_file}'."
		echo "  -t --tracks   - Include album tracks. Default: '${tracks}'."
		echo "  -h --help     - Show this help and exit."
		echo "  -v --verbose  - Verbose execution."
		echo "  -g --debug    - Extra verbose execution."
		echo 'Inputs:'
		echo "  top-dir       - '${top_dir}'"
		echo "Info:"
		echo "  ${script_name} (@PACKAGE_NAME@) version @PACKAGE_VERSION@"
		echo "  @PACKAGE_URL@"
		echo "  Send bug reports to: Geoff Levand <geoff@infradead.org>."
	} >&2
	eval "${old_xtrace}"
}

process_opts() {
	local short_opts="o:thvg"
	local long_opts="out-file:,tracks,help,verbose,debug"

	local opts
	opts=$(getopt --options ${short_opts} --long ${long_opts} -n "${script_name}" -- "$@")

	eval set -- "${opts}"

	while true ; do
		# echo "${FUNCNAME[0]}: (${#}) '${*}'"
		case "${1}" in
		-o | --out-file)
			out_file="${2}"
			shift 2
			;;
		-t | --tracks)
			tracks=1
			shift
			;;
		-h | --help)
			usage=1
			shift
			;;
		-v | --verbose)
			verbose=1
			shift
			;;
		-g | --debug)
			verbose=1
			debug=1
			set -x
			shift
			;;
		--)
			shift
			top_dir="${1:-}"
			if [[ ${top_dir} ]]; then
				shift
			fi
			extra_args="${*}"
			break
			;;
		*)
			echo "${script_name}: ERROR: Internal opts: '${*}'" >&2
			exit 1
			;;
		esac
	done
}

#===============================================================================
export PS4='\[\e[0;33m\]+ ${BASH_SOURCE##*/}:${LINENO}:(${FUNCNAME[0]:-main}):\[\e[0m\] '

script_name="${0##*/}"

SECONDS=0
start_time="$(date +%Y.%m.%d-%H.%M.%S)"

SCRIPTS_TOP=${SCRIPTS_TOP:-"$(cd "${BASH_SOURCE%/*}" && pwd)"}

trap "on_exit 'Failed'" EXIT
trap 'on_err ${FUNCNAME[0]:-main} ${LINENO} ${?}' ERR
set -eE
set -o pipefail
set -o nounset

source "${SCRIPTS_TOP}/audx-lib.sh"

out_file=''
tracks=''
usage=''
verbose=''
debug=''
top_dir=''

process_opts "${@}"

if [[ -f "${HOME}/.audx.conf" ]]; then
	source "${HOME}/.audx.conf"
fi

top_dir="${top_dir:-${collection_top:-}}"

if [[ ! ${out_file} ]]; then
	if [[ ${tracks} ]]; then
		out_file="/tmp/audx-tracks-age-${start_time}.lst"
	else
		out_file="/tmp/audx-albums-age-${start_time}.lst"
	fi
fi

if [[ ${usage} ]]; then
	usage
	trap - EXIT
	exit 0
fi

if [[ ${extra_args} ]]; then
	set +o xtrace
	echo "${script_name}: ERROR: Got extra args: '${extra_args}'" >&2
	usage
	exit 1
fi

check_top_dir "${top_dir}"
top_dir="$(realpath -e "${top_dir}")"

out_file="$(realpath -m "${out_file}")"

if [[ -e "${out_file}" && ! -f "${out_file}" ]]; then
	echo "${script_name}: ERROR: '${out_file}' exists and is not a file." >&2
	exit 1
fi

if [[ ${tracks} ]]; then
	readarray -t files_array < <( (cd "${top_dir}" && find . -type f -name '*.flac' -exec ls -l --time-style='+%Y.%m.%d' {} \;) \
		| grep -E --only-matching '[[:digit:]]{4}(\.[[:digit:]]{2}){2} .*.flac$' \
		| sort \
		|| { echo "${script_name}: ERROR: files_array find failed, function=${FUNCNAME[0]:-main}, line=${LINENO}, result=${?}" >&2; \
		kill -SIGUSR1 $$; } )
else
	readarray -t files_array < <( (cd "${top_dir}" && find . -type f -name '01-*.flac' -exec ls -l --time-style='+%Y.%m.%d' {} \;) \
		| grep -E --only-matching '[[:digit:]]{4}(\.[[:digit:]]{2}){2} .*/01-' \
		| sort \
		|| { echo "${script_name}: ERROR: files_array find failed, function=${FUNCNAME[0]:-main}, line=${LINENO}, result=${?}" >&2; \
		kill -SIGUSR1 $$; } )
fi

if (( ${#files_array[@]} == 0 )); then
	echo "${script_name}: No files found: '${top_dir}'" >&2
	trap "on_exit 'Success'" EXIT
	exit 0
fi

echo "${script_name}: INFO: Processing ${#files_array[@]} files." >&2

{
	echo "# ${script_name} (@PACKAGE_NAME@) - ${start_time}"
	echo "# ${top_dir}: ${#files_array[@]} files."
	echo ''
} > "${out_file}"

if [[ ${tracks} ]]; then
	printf "%s\n" "${files_array[@]}" >> "${out_file}"
else
	# 2007.04.25 ./ABC/Beauty Stab/01-
	for file in "${files_array[@]}"; do
		echo "${file:0:11}${file:13:-4}" >> "${out_file}"
	done
fi

echo "${script_name}: INFO: Age list in '${out_file}'" >&2

trap "on_exit 'Success'" EXIT
exit 0
